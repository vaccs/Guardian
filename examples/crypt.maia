
crypt_password: posix_crypt | glibc_crypt;

posix_crypt: /['a'-'z', 'A'-'Z', '0'-'9', '.', '/']{13}/;

glibc_crypt:
	"$" /"1" | "2a" | "5" | "6"/ #id
	"$" /['a'-'z', 'A'-'Z', '0'-'9', '.', '/']{,16}/ #salt
	"$" /['a'-'z', 'A'-'Z', '0'-'9', '.', '/']+/ #encrypted
	 ;

